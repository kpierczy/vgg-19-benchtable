{
    /* ============================================================================================================================ */
    /* ----------------------------------------------------- General Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Terminal settings
    // "terminal.integrated.fontSize": 17,
    "terminal.integrated.scrollback": 50000,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Editor Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */
    // Words-wrap
    "editor.wordWrap": "off",
    
    // Intendation
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",
    "editor.tabSize": 4,

    /* ============================================================================================================================ */
    /* ---------------------------------------------------- Formatting Settings --------------------------------------------------- */
    /* ============================================================================================================================ */

    // Header's configuration
    "psi-header.config": {
        "forceToTop": true,
        "initials": "K.P.",
        "author": "Krzysztof Pierczyk",
        "blankLinesAfter": 1,
        "authorEmail": "krzysztof.pierczyk@gmail.com",
        "creationDateZero": "asIs"
    },

    // Header's tracking configuration
    "psi-header.changes-tracking": {
        "isActive": true,
        "modDate": "@modified",
        "modDateFormat": "dd-MM-yyyy hh:nn:ss",
        "enforceHeader": false,
        "autoHeader": "off",
        "updateLicenseVariables": true,
    },

    // Custom variables
    "psi-header.variables": [
        ["projectname", "vgg-19-testbench"]
    ],

    // Language configuration
    "psi-header.lang-config": [
        {
            "language": "python",
            "begin": "# ====================================================================================================================================",
            "end": "# ====================================================================================================================================",
            "prefix": "# ",
        },
        {
            "language": "shellscript",
            "mapTo": "python"
        },
        {
            "language": "latex",
            "begin": "% ====================================================================================================================================",
            "end": "% ====================================================================================================================================",
            "prefix": "% ",
        },
        {
            "language": "bibtex",
            "mapTo": "latex"
        },
    ],

    // Templates configuration
    "psi-header.templates": [
        {
            "language": "python",
            "template": [
                "@file       <<filename>>",
                "@author     <<author>> (<<authoremail>>)",
                "@maintainer <<author>> (<<authoremail>>)",
                "@date       <<filecreated('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@modified   <<dateformat('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@project    <<projectname>>",
                "@brief      ",
                "",
                "",
                "@copyright <<author>> Â© <<year>>"
            ]
        },
        {
            "language": "shellscript",
            "mapTo": "python"
        },
        {
            "language": "latex",
            "mapTo": "python"
        },
        {
            "language": "bibtex",
            "mapTo": "python"
        },
    ],

    // Comment divider
    "comment-divider" : {
        "length" : 134,
        "shouldLengthIncludeIndent" : true,
        // Main header
        "mainHeaderFiller" : "=",
        "mainHeaderHeight" : "block",
        "mainHeaderAlign" : "center",
        // Subheader
        "subheaderFiller" : "=",
        "subheaderHeight" : "line",
        "subheaderAlign" : "center",
        // Sold line
        "lineFiller" : "=",
        // Language map
        "languagesMap" : {
            "python" :  [ "#", "#" ],
            "shellscript" :  [ "#", "#" ],
            "cmake" :  [ "#", "#" ],
            "cpp" :  [ "/*", "*/" ],
            "jsonc" :  [ "/*", "*/" ],
        },
    },

    /* ============================================================================================================================ */
    /* ---------------------------------------------------- Extensions Settings --------------------------------------------------- */
    /* ============================================================================================================================ */

    // Separator of CSV files for Excell preview
    "csv-preview.separator": "\\|",
    
    // LaTeX-related
	"latex-workshop.latex.outDir": "out",

    // Comments anchors
    "commentAnchors.tags.list": [
        {
            "tag": "LINK",
            "enabled": false
        }
    ],
        
    /* ============================================================================================================================ */
    /* ------------------------------------------------------- Other Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Files associations
    "files.associations": {
    },

}